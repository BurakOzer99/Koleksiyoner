@model  MertKoleksiyoner.Models.MultiModel.MultiModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}

<h2>Index</h2>


<div class="content-page">
    <div class="content">
        <!-- Start Content-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">Kullanıcı Tablosu</h4>
                            <br />
                            <a href="~/User/Create" class="btn btn-dark mb-4">Kullanıcı ekle</a>
                            <br />
                            <div class="table-responsive">
                                <table class="table mb-1">
                                    <thead class="table-dark">
                                        <tr>

                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Surname</th>
                                            <th>E-Mail</th>
                                            <th>UserName</th>
                                            <th>RoleName</th>
                                            <th>Is Active</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Users.Count == 0)
                                        {

                                            <tr>
                                                <td colspan="5">Kullanıcı bulunmamakdadır.</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (var item in Model.Users)
                                            {
                                                i++;
                                    <tr>

                                        <td>@i</td>
                                        <td>@item.Name</td>
                                        <td>@item.Surname</td>
                                        <td>@item.Email</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Role.roleName</td>

                                        <td>
                                            <input type="checkbox" class="form-check-input" checked="@item.IsActive"
                                                   value="true" data-val="true" disabled="true" />
                                        </td>

                                        <td>
                                            <a href="~/User/Edit/@item.Id" class="fe-edit "></a>

                                            &nbsp;|&nbsp;
                                            <a href="~/User/Delete/@item.Id" class="fe-trash-2 "></a>
                                        </td>
                                    </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>