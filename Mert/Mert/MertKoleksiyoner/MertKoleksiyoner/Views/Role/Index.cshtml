@model List<MertKoleksiyoner.Models.Role>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}

<h2>Index</h2>


<div class="content-page">
    <div class="content">
        <!-- Start Content-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">Role Tablosu</h4>
                            <br />
                            <a href="~/Role/Create" class="btn btn-dark mb-4">Role ekle</a>
                            <br />
                            <div class="table-responsive">
                                <table class="table mb-1">
                                    <thead class="table-dark">
                                        <tr>

                                            <th>#</th>
                                            <th>RoleName</th>
                                            <th>Is Active</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Count == 0)
                                        {

                                            <tr>
                                                <td colspan="5">Role bulunmamakdadır.</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (var item in Model)
                                            {
                                                i++;
                                                <tr>
                                                    <th scope="row">@i</th>                                                   
                                                <td>@item.roleName</td>
 

                                                <td>
                                                    <input type="checkbox" class="form-check-input" checked="@item.IsActive"
                                                           value="true" data-val="true" disabled="true" />
                                                </td>

                                                <td>
                                                    <a href="~/Role/Edit/@item.Id" class="fe-edit "></a>

                                                    &nbsp;|&nbsp;
                                                    <a href="~/Role/Delete/@item.Id" class="fe-trash-2 "></a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>