@model MertKoleksiyoner.Models.Role
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>


<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">Role Edit</h4>

                            <div class="row">
                                <div class="col-lg-12">
                                    <form method="post" enctype="multipart/form-data">

                                        <div class="mb-3">
                                            <label for="roleName" class="form-label">Edit Selected Role Name</label>
                                            <input type="text" id="roleName" name="roleName" value="@Model.roleName" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label for="IsActive" class="form-label">Is Active</label>
                                            <input type="checkbox" id="IsActive" name="IsActive" class="form-check-input"
                                                   value="true" data-val="true" checked=" @Model.IsActive">
                                        </div>

                                        <button type="submit" class="btn btn-dark">Save</button>
                                    </form>
                                </div> <!-- end col -->
                            </div>
                            <!-- end row-->

                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div><!-- end col -->
            </div>

        </div> <!-- container -->

    </div>


</div>