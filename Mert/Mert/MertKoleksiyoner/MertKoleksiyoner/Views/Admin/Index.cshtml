@model  List<MertKoleksiyoner.Models.Araba>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0;

}

<div class="content-page">
    <div class="content">
        <!-- Start Content-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">Araba Tablosu</h4>
                            <br />
                            <a href="~/Admin/Create" class="btn btn-dark mb-4">Araç ekle</a>
                            <br />
                            <div class="table-responsive">
                                <table class="table mb-1">
                                    <thead class="table-dark">
                                        <tr>
 
                                            <th>#</th>
                                            <th>Image</th>
                                            <th>CarName</th>
                                            <th>CarModel</th>
                                            <th>CarColor</th>
                                            <th>CarYear</th>
                                            <th>CarCompany</th>
                                            <th>Is Active</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Count == 0)
                                        {

                                            <tr>
                                                <td colspan="5">Araba bulunmamakdadır.</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (var item in Model)
                                            {
                                                i++;
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td><img src="~/Content/assets/images/Araba/@item.Image" style="height:200px; width:200px" class="avatar-xs img-fluid rounded" /></td>
                                        <td><p style="font-size:large">@item.carName</p></td>
                                        <td><p style="font-size:large">@item.carModel</p></td>
                                        <td><p style="font-size:large">@item.carColor</p></td>
                                        <td><p style="font-size:large">@item.carYear</p></td>
                                        <td><p style="font-size:large">@item.carCompany</p></td>


                                        <td>
                                            <input type="checkbox" class="form-check-input" checked="@item.IsActive"
                                                   value="true" data-val="true" disabled="true" />
                                        </td>

                                        <td>
                                            <a href="~/Admin/Edit/@item.Id" class="fe-edit "></a>

                                            &nbsp;|&nbsp;
                                            <a href="~/Admin/Delete/@item.Id" class="fe-trash-2 "></a>
                                        </td>
                                    </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

