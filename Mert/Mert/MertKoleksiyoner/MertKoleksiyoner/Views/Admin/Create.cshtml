
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>


<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">Araç Oluştur</h4>
                            <p class="sub-header">
                                Anasayfa gözükmesini istediğiniz araçları ekleyiniz.
                            </p>
                            <div class="row">
                                <div class="col-lg-12">
                                    <form method="post" enctype="multipart/form-data">

                                        <div class="mb-3">
                                            <label for="image" class="form-label">Araç Resmi</label>
                                            <input type="file" id="image" name="image" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label for="carName" class="form-label">Car Name</label>
                                            <input type="text" id="carName" name="carName" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label for="carModel" class="form-label">Car Model</label>
                                            <input type="text" id="carModel" name="carModel" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label for="carColor" class="form-label">Car Color</label>
                                            <input type="text" id="carColor" name="carColor" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label for="carYear" class="form-label">Car Year</label>
                                            <input type="text" id="carYear" name="carYear" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label for="carCompany" class="form-label">Company</label>
                                            <input type="text" id="carCompany" name="carCompany" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label for="IsActive" class="form-label">Is Active</label>
                                            <input type="checkbox" id="IsActive" name="IsActive" class="form-check-input"
                                                   value="true" data-val="true" checked="checked">
                                        </div>
                                        <button type="submit" class="btn btn-dark">Save</button>
                                    </form>
                                </div>
                            </div>                           
                        </div> 
                    </div>
                </div>
            </div>
        </div> 
    </div> 
</div>